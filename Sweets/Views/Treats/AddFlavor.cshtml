@{
  Layout = "_Layout";
}

@model Sweets.Models.Treat

<h1 class="jumbotron">Add a Flavor</h1>

<h4>Add a Flavor to: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.DropDownList("FlavorId", "Select Flavor")

  <input class="btn btn-success" type="submit" value="Add" />
}

<br>
<input type="button" class="btn btn-info" value="Back to Treat List" onclick="location.href='@Url.Action("Index", "Treats")'" />