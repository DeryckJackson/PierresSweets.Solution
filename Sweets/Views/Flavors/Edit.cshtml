@{
Layout = "_Layout";
}

@model Sweets.Models.Flavor

<h2 class="jumbotron">Edit @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  <div class="form-group">
    @Html.LabelFor(model => model.Name):
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control"})
  </div>
  <input type="submit" class="btn btn-primary" value="Save" />
}

<input type="button" class="btn btn-info mt-3" value="Back to Flavor List" onclick="location.href='@Url.Action("Index", "Flavors")'" />